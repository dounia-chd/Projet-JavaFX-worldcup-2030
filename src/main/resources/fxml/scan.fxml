<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ma.mondial2030.controller.ScanController" stylesheets="@../css/style.css">
   <top>
      <Label text="Scan QR Code" styleClass="page-title">
         <font>
            <Font size="28.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </Label>
   </top>
   
   <center>
      <VBox alignment="CENTER" spacing="30.0" styleClass="scan-container">
         <children>
            <Label text="Saisir ou scanner le QR Code du ticket" styleClass="section-title">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            
            <Label text="Vous pouvez saisir le code du ticket (ex: TKT-...) ou scanner le QR Code complet" 
                   styleClass="hint-label" wrapText="true" textFill="#666666">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            
            <TextField fx:id="qrCodeField" promptText="Code du ticket (ex: TKT-...) ou QR Code complet" minWidth="400.0" styleClass="qr-input" />
            
            <Button fx:id="scanButton" text="Valider l'accÃ¨s" onAction="#handleScan" defaultButton="true" styleClass="primary-button" minWidth="200.0" minHeight="50.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            
            <Label fx:id="resultLabel" styleClass="result-label" style="-fx-font-size: 24px; -fx-font-weight: bold;">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="backButton" text="Retour" onAction="#handleBack" styleClass="secondary-button" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>

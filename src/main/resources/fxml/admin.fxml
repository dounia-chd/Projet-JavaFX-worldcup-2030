<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ma.mondial2030.controller.AdminController" stylesheets="@../css/style.css">
   <top>
      <Label text="Gestion Tickets &amp; Annonces" styleClass="page-title">
         <font>
            <Font size="28.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </Label>
   </top>
   
   <center>
      <TabPane fx:id="tabPane" styleClass="admin-tabs">
         <tabs>
            <Tab text="Matchs &amp; Annonces">
               <content>
                  <VBox spacing="15.0">
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="addMatchButton" text="Ajouter un match" onAction="#handleAddMatch" styleClass="primary-button" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <TableView fx:id="matchesTable" styleClass="data-table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="matchNameColumn" text="Nom du match" minWidth="200.0" />
                              <TableColumn fx:id="matchDateColumn" text="Date/Heure" minWidth="150.0" />
                              <TableColumn fx:id="teamsColumn" text="Équipes" minWidth="200.0" />
                              <TableColumn fx:id="venueColumn" text="Lieu" minWidth="150.0" />
                              <TableColumn fx:id="availableTicketsColumn" text="Tickets disponibles" minWidth="150.0" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <Tab text="Utilisateurs">
               <content>
                  <TableView fx:id="usersTable" styleClass="data-table">
                     <columns>
                        <TableColumn fx:id="usernameColumn" text="Nom d'utilisateur" minWidth="150.0" />
                        <TableColumn fx:id="nameColumn" text="Nom complet" minWidth="200.0" />
                        <TableColumn fx:id="emailColumn" text="Email" minWidth="200.0" />
                        <TableColumn fx:id="roleColumn" text="Rôle" minWidth="100.0" />
                     </columns>
                  </TableView>
               </content>
            </Tab>
            
            <Tab text="Journal des accès">
               <content>
                  <TableView fx:id="logsTable" styleClass="data-table">
                     <columns>
                        <TableColumn fx:id="logUserColumn" text="Utilisateur" minWidth="150.0" />
                        <TableColumn fx:id="logTypeColumn" text="Type" minWidth="120.0" />
                        <TableColumn fx:id="logResultColumn" text="Résultat" minWidth="100.0" />
                        <TableColumn fx:id="logTimestampColumn" text="Date/Heure" minWidth="180.0" />
                     </columns>
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="backButton" text="Retour" onAction="#handleBack" styleClass="secondary-button" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>

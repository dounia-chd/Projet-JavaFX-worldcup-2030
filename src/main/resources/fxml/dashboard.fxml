<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ma.mondial2030.controller.DashboardController" stylesheets="@../css/style.css">
   <top>
      <VBox spacing="10.0" styleClass="header-container">
         <children>
            <Label fx:id="welcomeLabel" text="Bienvenue" styleClass="welcome-label">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="roleLabel" text="Rôle: " styleClass="role-label" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <VBox alignment="CENTER" spacing="20.0" styleClass="dashboard-container">
         <children>
            <Label text="Tableau de bord" styleClass="section-title">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            
            <HBox spacing="20.0" alignment="CENTER">
               <children>
                  <Button fx:id="ticketsButton" text="Mes Tickets" onAction="#handleTickets" styleClass="menu-button" minWidth="150.0" minHeight="80.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="scanButton" text="Scan QR Code" onAction="#handleScan" styleClass="menu-button" minWidth="150.0" minHeight="80.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="adminButton" text="Gestion Tickets" onAction="#handleAdmin" styleClass="menu-button" minWidth="150.0" minHeight="80.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="biometricButton" text="Biométrie" onAction="#handleBiometric" styleClass="menu-button" minWidth="150.0" minHeight="80.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="logoutButton" text="Déconnexion" onAction="#handleLogout" styleClass="secondary-button" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
